<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.berkeley.cs160.represent.represent.RepsListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/senators_text_section"
        >

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/senators_text"
            android:layout_marginEnd="25dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senators_text"
            android:text="@string/senators"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/divider"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/senators_text"
            android:layout_marginStart="25dp"
            android:background="@color/divider" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/collapsed_rep_item_height"
        android:layout_below="@+id/senators_text_section"
        android:id="@+id/senators_section"
        android:layout_marginTop="@dimen/reps_list_separation">

        <include layout="@layout/collapsed_rep_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/rep_section_margin"
            android:layout_marginTop="@dimen/rep_section_margin"
            android:layout_marginBottom="@dimen/rep_section_margin"
            android:id="@+id/senator_one"/>

        <include layout="@layout/collapsed_rep_item"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/rep_section_margin"
            android:id="@+id/senator_two"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/reps_text_section"
        android:layout_below="@id/senators_section"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/reps_text"
            android:layout_marginEnd="25dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reps_text"
            android:text="@string/representatives"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/divider"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/reps_text"
            android:layout_marginStart="25dp"
            android:background="@color/divider" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reps_text_section"
        android:id="@+id/reps_section"
        android:divider="@null"
        >

    </ListView>



</RelativeLayout>
